<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/text_padding"
    android:textStyle="bold"
    android:background="@color/highlight1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/postBlogName"
        style="@style/PostHeader"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/savePostBlock"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/content_row">

        <ImageView
            android:id="@+id/savePostIcon"
            android:src="@drawable/star_black"
            android:gravity="end"
            style="@style/PostHeader" />

        <TextView
            android:id="@+id/savePostButton"
            android:text="@string/save_favorite"
            style="@style/Favorite" />

    </LinearLayout>


</LinearLayout>