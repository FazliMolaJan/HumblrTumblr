<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/homeImage"
        android:src="@drawable/pusheen_pink"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/showFavsBtn"
        android:layout_below="@id/homeImage"
        style="@style/ButtonWide"
        android:background="@drawable/rounded_corner_pink"
        android:text="@string/favorites"
        android:layout_width="match_parent"
        android:height="90dp"
        android:textSize="24sp" />

    <Button
        android:id="@+id/clearFavs"
        style="@style/ButtonWide"
        android:layout_below="@id/showFavsBtn"
        android:background="@drawable/rounded_corner_gray"
        android:text="@string/clear_favs"
        android:textColor="@color/gray"
        android:layout_width="match_parent" />

</RelativeLayout>