<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyCompatTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/mainBackground</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/cheep_yellow</item>

        <!-- Support library compatibility -->
        <item name="homeAsUpIndicator">@drawable/cheep_yellow</item>
    </style>

    <style name="ActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/background</item>
        <item name="background">@color/background</item>
    </style>

    <!-- HOME -->

    <style name="ButtonWide">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/thin_strip</item>
    </style>

    <!-- items that are always visible -->
    <style name="ClickableView">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:padding">@dimen/text_padding</item>-->
    </style>

    <!-- context text not always visible -->
    <style name="ContentText">
        <item name="android:paddingLeft">@dimen/text_padding</item>
        <item name="android:paddingRight">@dimen/text_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LightText">
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="PostSource" parent="LightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TagRow" parent="LightText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">2</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ImageFullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Favorite">
        <item name="android:textColor">@color/favorite</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/content_row</item>
    </style>

</resources>
